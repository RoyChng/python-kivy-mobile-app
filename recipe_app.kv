<RandomRecipeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: [app.scale(15), app.scale(20)]
        size_hint: 1, 1
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images/random_recipe_bg.png'

        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: app.scale(10)
            pos_hint: {"top": 1}
            

            MDIconButton:
                icon: "arrow-left-drop-circle-outline"
                theme_icon_color: "Custom"
                icon_color: "#ffffff"
                md_bg_color: "#5A1400"
                icon_size: app.scale(19)
                pos_hint: {"top": 0.97}
                on_press: root.manager.current = 'home'

            MDLabel:
                text_size: self.size
                halign: "center"
                valign: "top"
                bold: True
                font_size: app.scale(26)
                text: "Random Recipe"
                pos_hint: {"top": 0.95}
                color: 0.3529, 0.07843, 0, 1

        BoxLayout:
            orientation: "vertical"
            padding: [0, root.height/2 - app.scale(170), 0, 0]
            size_hint_y: 1
            spacing: app.scale(30)
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                
                FitImage:
                    source: root.img
                    size_hint: None, None
                    size: root.width - 40, ((root.height)/2)-100
                    fit_mode: "cover"
                    radius: [app.scale(30), ]

            BoxLayout:
                orientation: "vertical"
                padding: [0, app.scale(60), 0, 0]
                MDLabel:
                    text_size: self.size
                    halign: "center"
                    valign: "top"
                    bold: True
                    font_size: app.scale(26)
                    text: root.title
                    color: 0.6117, 0.1333, 0, 1

                BoxLayout:
                    orientation: "horizontal"
                    height: self.minimum_height
                    padding: [0, app.scale(50), 0, app.scale(30)]
                    spacing: app.scale(20)

                    MDFillRoundFlatIconButton: 
                        size_hint_x: 1
                        icon: "arrow-right-drop-circle-outline"
                        text: "View Details"
                        text_color: "white"
                        md_bg_color: "#5A1400"
                        icon_color: "white"
                        font_size: app.scale(17)
                        rounded_button: True
                        on_press: app.load_recipe_detail(root.recipe_id, "random_recipe")

                    MDIconButton:
                        icon: "reload"
                        theme_icon_color: "Custom"
                        icon_color: "#ffffff"
                        md_bg_color: "#5A1400"
                        icon_size: app.scale(17)
                        on_press: app.load_random_recipe()


