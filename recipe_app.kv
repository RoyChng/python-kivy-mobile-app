<RecipeLarge@RelativeLayout>:
    source: ""
    title: ""
    category: ""
    recipe_id: ""
    size_hint: None, 1
    width: 300

    MDSmartTile:
        size_hint: 1, 1 
        pos_hint: {"top": 1}
        source: root.source
        radius: app.scale(16)
        lines: 2
        box_radius: [0, 0, app.scale(16), app.scale(16)]
        box_color: 0, 0, 0, .8
        fit_mode: "cover"
        on_press: app.load_recipe_detail(root.recipe_id, "home")

        MDIconButton:
            icon: "food-fork-drink"
            theme_icon_color: "Custom"
            icon_color: 1, 1, 1, 1
            _no_ripple_effect: True

        TwoLineListItem:
            text: root.title
            secondary_text: root.category
            pos_hint: {"center_y": .5}
            _no_ripple_effect: True

<RecipeMedium>:
